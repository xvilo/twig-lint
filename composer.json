{
    "name": "xvilo/twig-lint",
    "description": "Standalone twig linter.",
    "keywords": ["twig", "lint"],
    "homepage": "https://github.com/xvilo/twig-lint",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander",
            "email": "iam.asm89@gmail.com"
        },
        {
            "name": "Sem Schilder",
            "email": "me@sem.design"
        }
    ],
    "require": {
        "symfony/console": "^2.1 || ^3.0",
        "symfony/finder": "^2.1 || ^3.0",
        "twig/twig": "^2.4.4"
    },
    "autoload": {
        "psr-0": { "Asm89\\Twig\\Lint\\": "src/" }
    },
    "bin": ["bin/twig-linter"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
